<Window x:Class="RecipesWpfApp.Views1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipesWpfApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">

    <Grid Background="AliceBlue">

        <TextBlock Text="Welcome to the Recipe Application!" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,20,10,0" FontSize="24" Foreground="MediumPurple" FontWeight="Bold"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0">
            <Button Content="Search Recipe" Width="200" Height="50" Background="MediumPurple" Foreground="White" FontSize="16" Margin="0,10" Click="SearchButton_Click"/>
            <Button Content="My Favorites" Width="200" Height="50" Background="MediumPurple" Foreground="White" FontSize="16" Margin="0,10" Click="ViewRecipes_Click"/>
        </StackPanel>
    </Grid>

</Window>
