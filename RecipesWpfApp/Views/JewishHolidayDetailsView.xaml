<UserControl x:Class="RecipesWpfApp.Views.JewishHolidayDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipesWpfApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="450">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding JewishHoliday.Name}" 
                       Style="{StaticResource TextBlockStyle}">
            </TextBlock>
            <TextBlock Text="{Binding JewishHoliday.Description}"
                       Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBlock Text="{Binding JewishHoliday.Date}"
                       Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBlock Text="{Binding JewishHoliday.Hdate}"
                       Style="{StaticResource TextBlockStyle}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
